{
    "name": "stevebauman/translation",
    "description": "An easy automatic database driven translator for Laravel 4 / 5",
    "tags": ["lang", "translation", "translate", "localization", "localize", "laravel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Bauman",
            "email": "steven_bauman_7@hotmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/database": "4.* | 5.*",
        "illuminate/support": "4.* | 5.*",
        "stichoza/google-translate-php": "3.0.*"
    },
    "require-dev": {
      "phpunit/phpunit": "4.*",
      "mockery/mockery": "0.9.*"
    },
    "archive": {
      "exclude": ["/tests"]
    },
    "autoload": {
        "psr-4": {
            "Stevebauman\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stevebauman\\Translation\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable"
}
